<div class="container">
	<%= render "admin/layouts/header" %>

    <div class="row g-1">
        <div class="col-lg-3">
            <%= render "admin/layouts/sidebar" %>
        </div>

        <div class="col-lg-9">
            <div class="bg-white">
                <table class="table">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th scope="col">メールアドレス</th>
                            <th scope="col">名前</th>
                            <th scope="col">対応状況</th>
                        </tr>
                    </thead>

                    <% @contacts.each do |c| %>
                        <tbody>
                            <tr>
                                <td>
                                    <%= link_to "/admin/contact/show/#{c.id}" do %>
                                        <%= c.email %>
                                    <% end %>
                                </td>

                                <td>
                                    <%= c.name %>
                                </td>

                                <td>
                                    <% if c.status == 0 %>
                                        <label class="text-danger fw-bold">未対応</label>
                                    <% end %>
                                    <% if c.status == 1 %>
                                        <label class="text-success fw-bold">対応済み</label>
                                    <% end %>
                                </td>
                            </tr>
                        </tbody>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
