                                <img src="/assets/suggest/test1.png" class="evaluation" alt="">
                            </div>

                            <%= f.select :style1, [['5. 好み', '5'], ['4. まあ好み', '4'], ['3. どちらちとも言えない', '3'], ['2. あまり好みじゃない', '2'], ['1. 好みじゃやない', '1']], { include_blank: '評価してください ▾' }, class: 'form-control', required: true %>

