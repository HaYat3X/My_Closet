<div id="suggestion_suggestions">
    <div class="d-flex">
        <%# ! sidebar %>
        <div class="side-content">
            <%= render "layouts/pc_sidebar" %>
        </div>

        <%# ! contents %>
        <div class="main-content">
            <div class="pc-error-msg">
                <%= render "layouts/error" %>
            </div>

            <div class="suggest-content mx-auto">
                <%# ! 提案データがあるか判定 %>
                <% if Suggest.exists?(user_id: current_user.id) %>
                    <div class="row g-1">
                            <% @recommend.each do |sns| %>
                                <div class="col-lg-3 col-md-3 col-4 mt-1">

                                    <%= link_to "/sns/show/#{sns.id}" do %>
                                        <%= image_tag sns.photograph.url, class: "sns-image" %>
                                    <% end %>

                                    <div class="user-area py-2">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div class="d-flex align-items-center">
                                                <% if sns.user.avatar.present? %>
                                                    <%= link_to "/profile/show/#{sns.user_id}" do %>
                                                        <%= image_tag sns.user.avatar.url %>
                                                    <% end %>
                                                <% else %>
                                                    <%= link_to "/profile/show/#{sns.user_id}" do %>
                                                        <%= image_tag "/assets/user/avatar.png" %>
                                                    <% end %>
                                                <% end %>

                                                <div class="ms-2">
                                                    <div class="fw-bold user-name m-0">
                                                        <%= sns.user.user_name %>
                                                    </div>

                                                    <div class="user-height m-0">
                                                        <% if sns.user.height %>
                                                            <%= sns.user.height %>cm
                                                        <% else %>
                                                            身長未設定
                                                        <% end %>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mx-2">
                                                <div class="like m-0 d-flex align-items-center">
                                                    <%# ?  いいねできるかどうか判定 %>
                                                    <% if user_signed_in? %>
                                                        <% if SocialLike.where(social_id: sns.id, user_id: current_user.id).exists? %>
                                                            <%= link_to "/sns/delete_like/#{sns.id}", method: :delete do %>
                                                                <img src="/assets/icons/icn_heart.png" alt="">
                                                            <% end %>
                                                        <% else %>
                                                            <%= link_to "/sns/create_like/#{sns.id}", method: :post do %>
                                                                <img src="/assets/icons/icn_not_heart.png" alt="">
                                                            <% end %>
                                                        <% end %>
                                                    <% else %>
                                                        <%= link_to "/sns/create_like/#{sns.id}", method: :post do %>
                                                            <img src="/assets/icons/icn_not_heart.png" alt="">
                                                        <% end %>
                                                    <% end %>

                                                    <span class="number-of-likes align-self-center">
                                                        <%= SocialLike.where(social_id: sns.id).count %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                <% else %>

                        <%= form_with(model: @suggest, url: "/suggest_create", local: true) do |f| %>
                            <div class="mb-3">
                                <p>あなたはオーバーサイズかジャストサイズ、どちらが好きですか？</p>
                                <%= f.radio_button :size, -1, id: "radio-a01" %>
                                <%= f.label :size, "オーバーサイズ", class: "radio-a-label", for: "radio-a01" %>

                                <%= f.radio_button :size, 1, id: "radio-a02" %>
                                <%= f.label :size, "ジャストサイズ", class: "radio-a-label", for: "radio-a02" %>

                                <div>
                                    <% @suggest.errors[:size].each do |error| %>
                                        <small class="text-danger">コーディネートタイトルを入力してください。</small>
                                    <% end %>
                                </div>
                            </div>
                            <hr>

                            <div class="mb-3">
                                <p>あなたの瞳の色を選んでください？</p>
                                <%= f.radio_button :eye_color, "黒っぽい", id: "radio-a01" %>
                                <%= f.label :eye_color, "黒っぽい", class: "radio-a-label", for: "radio-a01" %>

                                <%= f.radio_button :eye_color, "茶色っぽい", id: "radio-a02" %>
                                <%= f.label :eye_color, "茶色っぽい", class: "radio-a-label", for: "radio-a02" %>

                                <%= f.radio_button :eye_color, "青っぽい", id: "radio-a03" %>
                                <%= f.label :eye_color, "青っぽい", class: "radio-a-label", for: "radio-a03" %>

                                <div>
                                    <% @suggest.errors[:eye_color].each do |error| %>
                                        <small class="text-danger">コーディネートタイトルを入力してください。</small>
                                    <% end %>
                                </div>
                            </div>
                            <hr>

                            <div class="mb-3">
                                <p>あなたの髪の色を選んでください？</p>
                                <%= f.radio_button :hair_color, "黒っぽい", id: "radio-a01" %>
                                <%= f.label :hair_color, "黒っぽい", class: "radio-a-label", for: "radio-a01" %>

                                <%= f.radio_button :hair_color, "茶色っぽい", id: "radio-a02" %>
                                <%= f.label :hair_color, "茶色っぽい", class: "radio-a-label", for: "radio-a02" %>

                                <%= f.radio_button :hair_color, "青っぽい", id: "radio-a03" %>
                                <%= f.label :hair_color, "青っぽい", class: "radio-a-label", for: "radio-a03" %>

                                <div>
                                    <% @suggest.errors[:hair_color].each do |error| %>
                                        <small class="text-danger">コーディネートタイトルを入力してください。</small>
                                    <% end %>
                                </div>
                            </div>
                            <hr>

                            <div class="mb-3">
                                <p>あなたの肌の色を選んでください？</p>
                                <%= f.radio_button :skin_color, "黒っぽい", id: "radio-a01" %>
                                <%= f.label :skin_color, "黒っぽい", class: "radio-a-label", for: "radio-a01" %>

                                <%= f.radio_button :skin_color, "茶色っぽい", id: "radio-a02" %>
                                <%= f.label :skin_color, "茶色っぽい", class: "radio-a-label", for: "radio-a02" %>

                                <%= f.radio_button :skin_color, "青っぽい", id: "radio-a03" %>
                                <%= f.label :skin_color, "青っぽい", class: "radio-a-label", for: "radio-a03" %>

                                <div>
                                    <% @suggest.errors[:skin_color].each do |error| %>
                                        <small class="text-danger">コーディネートタイトルを入力してください。</small>
                                    <% end %>
                                </div>
                            </div>
                            <hr>

                            <div class="mb-3">
