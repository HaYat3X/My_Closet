<div id="auth">
    <%= render "devise/layouts/pc_header" %>

    <h2 class="text-center mt-5 pt-5 fw-bold text-dark">パスワード再設定</h2>

    <div class="col-lg-3 mx-auto mt-5">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {class:"needs-validation", :novalidate => true}) do |f| %>

            <%# ? バックエンド側でのバリデーションチェック %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <%# ? メールアドレス入力エリア %>
            <div class="mt-3 input-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control", required: true  %>
                <div class="invalid-feedback">
                    メールアドレスを入力して下さい。
                </div>
            </div>

            <div class="mt-4 mb-5 mx-auto col-10 submit-btn">
                <%= f.submit "パスワードリセット", class: "btn fw-bold col-12" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>