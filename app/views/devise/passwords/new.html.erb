<div id="auth" style="padding-top: 90px; padding-bottom: 150px;">
    <div class="auth-content mx-auto">
        <h2 class="text-center fw-bold">パスワード再設定</h2>
        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
            <div class="mt-3">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>

                <div>
                    <%= render "devise/shared/error_messages", resource: resource %>
                </div>
            </div>

            <div class="mx-auto col-10">
                <%= f.submit "パスワードリセット", class: "btn fw-bold col-12 submit-btn" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>