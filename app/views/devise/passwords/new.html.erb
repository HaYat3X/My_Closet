<div id="auth" class="col-lg-4 col-md-6 col-12 mx-auto mt-5">
    <h2 class="text-center mb-5 fw-bold text-primary">My Closet</h2>
  
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {class:"needs-validation", :novalidate => true}) do |f| %>

        <%# ? バックエンド側でのバリデーションチェック %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%# ? メールアドレス入力エリア %>
        <div class="mt-3 input-group">
            <span class="input-group-text" id="addon-wrapping">
                <i class="bi bi-envelope"></i>
            </span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control", required: true  %>
            <div class="invalid-feedback">
                メールアドレスを入力して下さい。
            </div>
        </div>

        <div class="my-3">
          <%= f.submit "パスワードリセット", class: "btn btn-outline-primary col-12" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
