<div id="auth" class="col-lg-4 col-md-6 col-12 mx-auto mt-5">
    <h2 class="text-center mb-5 fw-bold text-primary">My Closet</h2>
  
    <%# * パスワードリセットフォーム %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {method: :put, class:"needs-validation", :novalidate => true}) do |f| %>

        <%# ? バックエンド側でのバリデーションチェック %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        
        <%# ? パスワード入力エリア %>
        <div class="mt-3 input-group">
            <span class="input-group-text" id="addon-wrapping">
                <i class="bi bi-key"></i>
            </span>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, class: "form-control", placeholder: "パスワード" %>
            <div class="invalid-feedback">
                パスワードを入力して下さい。
            </div>
        </div>

        <%# ? パスワード再入力エリア %>
        <div class="mt-3 input-group">
            <span class="input-group-text" id="addon-wrapping">
                <i class="bi bi-key"></i>
            </span>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", required: true, class: "form-control", placeholder: "パスワードの確認" %>
            <div class="invalid-feedback">
                パスワードを再入力して下さい。
            </div>
        </div>

        <div class="my-3">
          <%= f.submit "パスワードリセット", class: "btn btn-outline-primary col-12" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
