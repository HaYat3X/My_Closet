<div id="auth">
    <%= render "devise/layouts/pc_header" %>

    <%= render "layouts/error" %>

    <h2 class="text-center mt-5 pt-5 fw-bold text-dark">認証メール再送</h2>

    <div class="col-lg-3 mx-auto mt-5">
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), :html => {class:"needs-validation", :novalidate => true}) do |f| %>

        <%# ? バックエンド側でのバリデーションチェック %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%# ? メールアドレス入力エリア %>
        <div class="mt-3 input-group">
            <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control", autocomplete: "email" ,required: true , value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)%>
            <div class="invalid-feedback">
                メールアドレスを入力して下さい。
            </div>
        </div>

        <div class="mt-4 mb-5 mx-auto col-10 submit-btn">
            <%= f.submit "認証メールを再送", class: "btn col-12 fw-bold" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
