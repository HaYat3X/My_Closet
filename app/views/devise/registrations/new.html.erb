<div id="auth">
    <%= render "devise/layouts/pc_header" %>

    <h2 class="text-center mt-5 pt-5 fw-bold text-dark">新規会員登録</h2>

    <div class="col-lg-3 mx-auto mt-5">
        <%# * サインアップフォーム %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class:"needs-validation", :novalidate => true}) do |f| %>
        
            <%# ? バックエンド側でのバリデーションチェック %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <%# ? ユーザ名入力エリア %>
            <div class="mt-3 input-group">
                <%= f.text_field :user_name, class: "form-control", autofocus: true, autocomplete: "user_name", placeholder: "ユーザ名", required: true, "aria-label": "ユーザー名", "aria-describedby": "addon-wrapping" %>
                <div class="invalid-feedback">
                    ユーザ名を入力して下さい。
                </div>
            </div>

            <%# ? メールアドレス入力エリア %>
            <div class="mt-3 input-group">
                <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "メールアドレス", required: true, "aria-describedby": "addon-wrapping" %>
                <div class="invalid-feedback">
                    メールアドレスを入力して下さい。
                </div>
            </div>

            <%# ? パスワード入力エリア %>
            <div class="mt-3 input-group">
                <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "パスワード", required: true %>
                <div class="invalid-feedback">
                    パスワードを入力して下さい。
                </div>
            </div>

            <%# ? パスワード確認エリア %>
            <div class="mt-3 input-group">
                <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "パスワード確認", required: true %>
                <div class="invalid-feedback">
                    パスワードを再入力して下さい。
                </div>
            </div>

            <div class="mt-4 mb-5 mx-auto col-10 submit-btn">
                <%= f.submit "新規会員登録", class: "btn col-12 fw-bold" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>