<div id="register" class="col-lg-4 mx-auto">
  <h2 class="text-center mb-4">サインイン</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class:"needs-validation", :novalidate => true}) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="mb-3">
      <%= f.text_field :user_name, class: "form-control", autofocus: true, autocomplete: "user_name", placeholder: "ユーザ名" %>
    </div>

     <div class="col-md-3">
    <label for="validationCustom04" class="form-label">都道府県</label>
    <select class="form-select" id="validationCustom04" required>
      <option selected disabled value="">選択...</option>
      <option>...</option>
    </select>
    <div class="invalid-feedback">
      有効な都道府県を選択して下さい
    </div>
  </div>

    <div class="mb-3">
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "パスワード" %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "パスワードの確認" %>
    </div>

    <div class="mb-4">
      <%= f.submit "サインインする", class: "btn btn-primary col-lg-12" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>