<div id="login" class="col-lg-4 mx-auto">
  <h2 class="text-center mb-4">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password, placeholder: "パスワード", class: "form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ログイン状態を保持する" %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "ログインする", class: "btn btn-primary col-lg-12"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>