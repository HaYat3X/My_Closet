<div id="auth">
    <h2 class="text-center fw-bold" style="margin-top: 92px;">アカウント復旧</h2>

    <div class="auth-content mx-auto">
        <%= form_for(resource, as: resource_name, url: unlock_path(resource_name)) do |f|%>
        <%# ? メールアドレス入力エリア %>
        <div class="mt-3">
            <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", autofocus: true, autocomplete: "email" %>

            <div>
                <%= render "devise/shared/error_messages", resource: resource %>
            </div>
        </div>

        <div class="mx-auto col-10">
            <%= f.submit "アカウントを復旧", class: "btn col-12 fw-bold submit-btn" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
