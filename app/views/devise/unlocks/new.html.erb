<div id="unlocks" class="col-lg-4 mx-auto">
  <h2 class="text-center mb-4">ロック解除</h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-4">
      <%= f.submit "ロックを解除する", class: "btn btn-primary col-lg-12" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
