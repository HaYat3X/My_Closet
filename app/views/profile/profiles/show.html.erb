<div id="profile_profiles">
    <%# ! header %>
    <div class="pc-header">
        <%= render "profile/layouts/pc_header" %>
    </div>

    <div class="row g-0">
        <%# ! sidebar %>
        <div class="col-lg-2-5 pc-sidebar">
            <%= render "profile/layouts/pc_sidebar" %>
        </div>

        <%# ! contents %>
        <div class="col-lg-9-5 col-12">
            <%= image_tag "/assets/user/cover_img.jpg", class: "profile-cover" %>

            <div class="show-content">
                <div class="d-flex align-items-center">
                    <% if @user.avatar.url%>
                        <%= image_tag @user.avatar.url, class: "avatar" %>
                    <% else %>
                        <img src="/assets/default-avatar.png" alt="Generic placeholder image" class="avatar">
                    <% end %>

                    <div class="align-items-center d-flex justify-content-between flex-grow-1">
                        <div>
                            <h4 class="fw-bold mb-0 mt-1">
                                <%= @user.user_name %>
                            </h4>

                            <small class="mt-1">
                                <% if @user.gender == 1 %>
                                    MEN 
                                <% else %>
                                    WOMEN 
                                <% end %>

                                <% if @user.height %>
                                    <%= @user.height %>cm 
                                <% else %>
                                    身長未設定 
                                <% end %>

                                <% if @user.age %>
                                    <%= @user.age %>歳 
                                <% else %>
                                    年齢未設定 
                                <% end %>
                            </small>

                            <div class="mt-2">
                                <%= link_to "/profile/follow_list/#{@user.id}", class: "text-dark"  do %>
                                    <span class="fw-bold"><%= @follow_list %></span>フォロー中
                                <% end %>

                                <%= link_to "/profile/follower_list/#{@user.id}", class: "text-dark mx-3" do %>
                                    <span class="fw-bold"><%= @follower_list %></span>フォロワー
                                <% end %>
                            </div>
                            
                        </div>

                        <div class="ml-auto">
                            <% if @user.id == current_user.id %>
                                <%= button_to "プロフィール更新", "/profile/edit/#{@user.id}", method: :get, class: "btn rounded-pill edit-btn px-4 align-self-center" %>
                            <% else %>
                                <%# ! フォローしているかしていないか判断する %>
                                <% if UserRelation.where(follow_id: current_user.id, follower_id: @user.id).exists? %>
                                <%= button_to "フォロー解除", "/profile/follow/#{@user.id}", method: :delete, class: "btn btn-outline-primary align-self-center" %>
                                <% else %>
                                <%= button_to "フォロー", "/profile/follow/#{@user.id}", method: :post, class: "btn btn-primary align-self-center" %>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <%= @user.profile %>
                </div>

                <div class="mt-4">
                    <ul class="tab-menu nav nav-underline nav-fill">
                        <li class="nav-item flex-fill">
                            <a href="#sns" class="nav-link fw-bold active" data-bs-toggle="tab">コーディネート</a>
                        </li>

                        <li class="nav-item flex-fill">
                            <a href="#like" class="nav-link fw-bold" data-bs-toggle="tab">いいね！</a>
                        </li>

                        <li class="nav-item flex-fill">
                            <a href="#closet" class="nav-link fw-bold" data-bs-toggle="tab">クローゼット</a>
                        </li>

                        <li class="nav-item flex-fill">
                            <a href="#faq" class="nav-link fw-bold" data-bs-toggle="tab">質問</a>
                        </li>
                    </ul>

                    <div class="user-post-content">
                        <div class="tab-content mt-3">
                            <div id="sns" class="tab-pane active mt-1 mx-5 px-5">
                                <div class="row g-1">
                                    <% @snss.each do |sns| %>
                                        <div class="col-lg-4">
                                            <%= link_to "/sns/show/#{sns.id}" do %>
                                                <%= image_tag sns.photograph.url, class: "sns-image" %>
                                            <% end %>

                                            <div class="user-area py-2">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <div class="d-flex align-items-center">
                                                        <% if sns.user.avatar.present? %>
                                                            <%= link_to "/profile/show/#{sns.user_id}" do %>
                                                                <%= image_tag sns.user.avatar.url %>
                                                            <% end %>
                                                        <% else %>
                                                            <%= link_to "/profile/show/#{sns.user_id}" do %>
                                                                <%= image_tag "/assets/user/avatar.png" %>
                                                            <% end %>
                                                        <% end %>

                                                        <div class="ms-2">
                                                            <div class="fw-bold user-name m-0">
                                                                <%= sns.user.user_name %>
                                                            </div>

                                                            <div class="user-height m-0">
                                                                <% if sns.user.height %>
                                                                    <%= sns.user.height %>cm
                                                                <% else %>
                                                                    未設定
                                                                <% end %>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="mx-2">
                                                        <div class="like m-0 d-flex align-items-center">
                                                            <%# ?  いいねできるかどうか判定 %>
                                                            <% if user_signed_in? %>
                                                                <% if SocialLike.where(social_id: sns.id, user_id: current_user.id).exists? %>
                                                                    <%= link_to "/sns/delete_like/#{sns.id}", method: :delete do %>
                                                                        <i style="color: #E63758;" class="bi bi-heart-fill"></i>
                                                                    <% end %>
                                                                <% else %>
                                                                    <%= link_to "/sns/create_like/#{sns.id}", method: :post do %>
                                                                        <i style="color: #FFFFFF;" class="bi bi-heart"></i>
                                                                    <% end %>
                                                                <% end %>
                                                            <% else %>
                                                                <%= link_to "/sns/create_like/#{sns.id}", method: :post do %>
                                                                    <i style="color: #FFFFFF;" class="bi bi-heart fs-5"></i>
                                                                <% end %>
                                                            <% end %>

                                                            <span class="number-of-likes align-self-center">
                                                                <%= SocialLike.where(social_id: sns.id).count %>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>

                                    <%= paginate @snss %>
                                </div>
                            </div>

                            <div id="like" class="tab-pane mt-1 mx-5 px-5">
                                <div class="row g-1">
                                    <% Social.all.each do |sns| %>
                                        <% @sns_likes.each do |sl| %>
                                            <% if sl.social_id == sns.id %>
                                                <div class="col-lg-4">
                                                    <%= link_to "/sns/show/#{sns.id}" do %>
                                                        <%= image_tag sns.photograph.url, class: "sns-image" %>
                                                    <% end %>

                                                    <div class="user-area py-2">
                                                        <div class="d-flex align-items-center justify-content-between">
                                                            <div class="d-flex align-items-center">
                                                                <% if sns.user.avatar.present? %>
                                                                    <%= link_to "/profile/show/#{sns.user_id}" do %>
                                                                        <%= image_tag sns.user.avatar.url %>
                                                                    <% end %>
                                                                <% else %>
                                                                    <%= link_to "/profile/show/#{sns.user_id}" do %>
                                                                        <%= image_tag "/assets/user/avatar.png" %>
                                                                    <% end %>
                                                                <% end %>

                                                                <div class="ms-2">
                                                                    <div class="fw-bold user-name m-0">
                                                                        <%= sns.user.user_name %>
                                                                    </div>

                                                                    <div class="user-height m-0">
                                                                        <% if sns.user.height %>
                                                                            <%= sns.user.height %>cm
                                                                        <% else %>
                                                                            未設定
                                                                        <% end %>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="mx-2">
                                                                <div class="like m-0 d-flex align-items-center">
                                                                    <%# ?  いいねできるかどうか判定 %>
                                                                    <% if user_signed_in? %>
                                                                        <% if SocialLike.where(social_id: sns.id, user_id: current_user.id).exists? %>
                                                                            <%= link_to "/sns/delete_like/#{sns.id}", method: :delete do %>
                                                                                <i style="color: #E63758;" class="bi bi-heart-fill"></i>
                                                                            <% end %>
                                                                        <% else %>
                                                                            <%= link_to "/sns/create_like/#{sns.id}", method: :post do %>
                                                                                <i style="color: #FFFFFF;" class="bi bi-heart"></i>
                                                                            <% end %>
                                                                        <% end %>
                                                                    <% else %>
                                                                        <%= link_to "/sns/create_like/#{sns.id}", method: :post do %>
                                                                            <i style="color: #FFFFFF;" class="bi bi-heart fs-5"></i>
                                                                        <% end %>
                                                                    <% end %>

                                                                    <span class="number-of-likes align-self-center">
                                                                        <%= SocialLike.where(social_id: sns.id).count %>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% end %>
                                        <% end %>
                                    <% end %>

                                    <%= paginate @sns_likes %>
                                </div>
                            </div>

                            <div id="closet" class="tab-pane mt-1 mx-5 px-5">
                                <div class="row g-1">
                                    <% @closets.each do |c| %>
                                        <div class="col-lg-4">
                                            <%= link_to "/closet/show/#{c.id}" do %>
                                                <%= image_tag c.photograph.url, class: "sns-image" %>
                                            <% end %>
                                        </div>
                                    <% end %>

                                    <%= paginate @closets %>
                                </div>
                            </div>

                            <div id="faq" class="tab-pane mt-1">
                                <div class="row g-5">
                                    <% @faq.each do |f| %>
                                        <div class="col-lg-6">
                                            <div class="faq-content">
                                                <div class="row g-0">
                                                    <div class="col-lg-5">
                                                        <%= image_tag f.photograph.url, class: "faq-image" %>
                                                    </div>

                                                    <div class="col-lg-7">
                                                        投稿者情報
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>

                                    <%= paginate @faq %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

