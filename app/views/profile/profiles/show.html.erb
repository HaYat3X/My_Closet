<div id="profile_profiles">
    <div class="d-flex">
        <%# ! sidebar %>
        <div class="side-content">
            <%= render "layouts/pc_sidebar" %>
        </div>

        <%# ! contents %>
        <div class="main-content">
            <%= image_tag "/assets/user/cover_img.png", class: "profile-cover" %>

            <div class="show-content mx-auto">
                <div class="d-flex align-items-center">
                    <% if @user.avatar.url%>
                        <%= image_tag @user.avatar.url, class: "avatar" %>
                    <% else %>
                        <img src="/assets/user/avatar.png" alt="Generic placeholder image" class="avatar">
                    <% end %>

                    <div class="align-items-center d-flex justify-content-between flex-grow-1">
                        <div class="user-information-area">
                            <h4 class="fw-bold mb-0">
                                <%= @user.user_name %>
                            </h4>

                            <small>
                                <% if @user.gender == 1 %>
                                    MEN 
                                <% else %>
                                    WOMEN 
                                <% end %>

                                <% if @user.height %>
                                    <%= @user.height %>cm 
                                <% else %>
                                    身長未設定 
                                <% end %>

                                <% if @user.age %>
                                    <%= @user.age %>歳 
                                <% else %>
                                    年齢未設定 
                                <% end %>
                            </small>

                            <div class="follow-area">
                                <%= link_to "/follow/#{@user.id}?tab=follow_all", class: "text-dark"  do %>
                                    <span class="fw-bold"><%= @follow_list %></span>フォロー中
                                <% end %>

                                <%= link_to "/follow/#{@user.id}?tab=follower", class: "text-dark mx-3" do %>
                                    <span class="fw-bold"><%= @follower_list %></span>フォロワー
                                <% end %>
                            </div>
                            
                        </div>

                        <div class="ml-auto">
                            <% if @user.id == current_user.id %>
                                <%= button_to "プロフィール更新", "/profile/edit/#{@user.id}", method: :get, class: "btn rounded-pill edit-btn px-4 align-self-center" %>
                            <% else %>
                                <%# ! フォローしているかしていないか判断する %>
                                <% if UserRelation.where(follow_id: current_user.id, follower_id: @user.id).exists? %>
                                <%= button_to "フォロー解除", "/profile/follow/#{@user.id}", method: :delete, class: "btn btn-outline-primary align-self-center" %>
                                <% else %>
                                <%= button_to "フォロー", "/profile/follow/#{@user.id}", method: :post, class: "btn btn-primary align-self-center" %>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <%= simple_format(@user.profile) %>
                </div>

                <div class="user-post-area">
                    <ul class="tab-menu nav nav-underline nav-fill">
                        <li class="nav-item flex-fill">
                            <a href="?tab=sns" class="nav-link fw-bold <%= params[:tab].nil? || params[:tab] == 'sns' ? 'active' : '' %>">コーディネート</a>
                        </li>

                        <li class="nav-item flex-fill">
                            <a href="?page=1&tab=like" class="nav-link fw-bold <%= params[:tab] == 'like' ? 'active' : '' %>">いいね！</a>
                        </li>

                        <li class="nav-item flex-fill">
                            <a href="?page=1&tab=closet" class="nav-link fw-bold <%= params[:tab] == 'closet' ? 'active' : '' %>">クローゼット</a>
                        </li>

                        <li class="nav-item flex-fill">
                            <a href="#faq" class="nav-link fw-bold" data-bs-toggle="tab">質問</a>
                        </li>
                    </ul>

                    <div class="user-post-content">
                        <div class="tab-content mt-3">
                            <div id="sns" class="tab-pane active">
                                <div class="row g-1">
                                    <% @sns_all.each do |sns| %>
                                        <div class="col-lg-4">
                                            <%= link_to "/sns/show/#{sns.id}" do %>
                                                <%= image_tag sns.photograph.url, class: "photograph" %>
                                            <% end %>
                                        </div>
                                    <% end %>
                                </div>

                                <div class="page d-flex justify-content-center">
                                    <%= paginate @sns_all, param_name: :page_sns, params: { tab: "sns" } %>
                                </div>
                            </div>

                            <div id="like" class="tab-pane">
                                <div class="row g-1">
                                    <% @sns_like.each do |sns| %>
                                        <div class="col-lg-4">
                                            <%= link_to "/sns/show/#{sns.id}" do %>
                                                <%= image_tag sns.photograph.url, class: "photograph" %>
                                            <% end %>
                                        </div>
                                    <% end %>
                                </div>

                                <div class="page d-flex justify-content-center">
                                    <%= paginate @sns_like, param_name: :page_like, params: { tab: "like" } %>
                                </div>
                            </div>

                            <div id="closet" class="tab-pane">
                                <div class="row g-1">
                                    <% @closets.each do |closet| %>
                                        <div class="col-lg-4">
                                            <%= link_to "/closet/show/#{closet.id}" do %>
                                                <%= image_tag closet.photograph.url, class: "photograph" %>
                                            <% end %>
                                        </div>
                                    <% end %>
                                </div>

                                <div class="page d-flex justify-content-center">
                                    <%= paginate @closets, param_name: :page_closet, params: { tab: "closet" } %>
                                </div>
                            </div>

                            <div id="faq" class="tab-pane mt-1">
                                <div class="row g-5">
                                    <% @faq.each do |f| %>
                                        <div class="col-lg-6">
                                            <div class="faq-content">
                                                <div class="row g-0">
                                                    <div class="col-lg-5">
                                                        <%= image_tag f.photograph.url, class: "faq-image" %>
                                                    </div>

                                                    <div class="col-lg-7">
                                                        投稿者情報
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>

                                    <%= paginate @faq %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
  // 実行したいコードをここに記述
  $(document).ready(function() {
        <%# ! フォロー中のユーザーの投稿のみに切り替える %>
        const checkbox = document.getElementById('formSwitchCheckDefault');
        const form = document.getElementById('myForm');

        <%# ! フォロー中のユーザーの投稿のみに切り替える %>
        if (checkbox && form) {
            checkbox.addEventListener('change', () => {
                if (checkbox.checked) {
                    form.submit();
                } else {
                    form.submit();
                }
            });
        }
        
        <%# ! 現在位置しているタブをアクティブ状態にする %>
        function setActiveTab(tabId) {
            $('.tab-menu .nav-link').removeClass('active');
            $('.tab-content .tab-pane').removeClass('show active');
            $('#' + tabId).addClass('show active');
            $('.tab-menu .nav-link[href*="tab=' + tabId + '"]').addClass('active');
        }

        const urlParams = new URLSearchParams(window.location.search);
        const tabValue = urlParams.get('tab');

        if (tabValue) {
            const tabId = tabValue.toLowerCase();
            setActiveTab(tabId);
        } else {
            $('.tab-menu .nav-link[href*="?tab=all"]').addClass('active');
            $('.tab-content .tab-pane#all').addClass('show active');
        }

        <%# ! ページ遷移時にタブの位置を保持する %>
        $(document).on('click', '.tab-menu .nav-link', function(event) {
            event.preventDefault();
            const tabId = $(this).attr('href').split('tab=')[1].toLowerCase();

            if (tabId === 'page') {
                return;
            }

            setActiveTab(tabId);

            const newUrl = window.location.pathname + '?tab=' + tabId;
            window.history.pushState({ path: newUrl }, '', newUrl);
        });
    });
</script>