<div id="profile_alerts">
    <%# ! header %>
    <div class="pc-header">
        <%= render "profile/layouts/pc_header" %>
    </div>

    <div class="row g-0">
        <%# ! sidebar %>
        <div class="col-lg-2-5 pc-sidebar">
            <%= render "profile/layouts/pc_sidebar" %>
        </div>

        <%# ! contents %>
        <div class="col-lg-9-5 col-12">
            <div class="show-content col-lg-10 mx-auto">
                <h3 class="pt-3 pb-5 fw-bold text-center">お知らせ</h3>

                <div class="alert-body p-5">
                    <h4 class="fw-bold"><%= @alert.title %></h4>

                    <div class="d-flex align-items-center my-3">
                        <%= image_tag "/assets/img_1.png", class: "alert-image" %>

                        <div class="align-items-center alart-title">
                            <h6 class="fw-bold mb-0 mt-1">MY CLOSET運営</h6>
                            <small><%= @alert.created_at.strftime('%m月%d日 %H:%M') %></small>
                        </div> 
                    </div>

                    <div class="pt-3">
                        <%= @alert.content %>
                    </div>

                    <div class="pt-3 text-center">
                        <%= link_to "戻る", "/profile/alert/list", class: "btn px-5 rounded-pill" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>