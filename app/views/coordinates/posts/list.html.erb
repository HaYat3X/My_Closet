<div id="closet_list">
    <%# ! header %>
    <%= render "coordinates/layouts/header" %>
    <div class="d-flex">
        <%# ! sidebar %>
        <div class="col-lg-3">
            <%= render "coordinates/layouts/sidebar" %>
        </div>

        <%# ! contents %>
        <div class="list_content col-lg-9">
            <div class="m-3 bg-light">
                <%# * タブメニューエリア %>
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a href="#all" class="nav-link active" data-bs-toggle="tab">すべて</a>
                    </li>
                    <li class="nav-item">
                        <a href="#outer" class="nav-link" data-bs-toggle="tab">アウター</a>
                    </li>
                    <li class="nav-item">
                        <a href="#tops" class="nav-link" data-bs-toggle="tab">トップス</a>
                    </li>
                    <li class="nav-item">
                        <a href="#pants" class="nav-link" data-bs-toggle="tab">パンツ</a>
                    </li>
                    <li class="nav-item">
                        <a href="#shoes" class="nav-link" data-bs-toggle="tab">シューズ</a>
                    </li>
                    <li class="nav-item">
                        <a href="#other" class="nav-link" data-bs-toggle="tab">その他</a>
                    </li>
                </ul>

                <%# * タブエリア %>
                <div class="tab-content">
                    <%# ? allタブエリア %>
                    <div id="all" class="tab-pane active">
                        <div class="row">
                            <% @closets_all.each do |c| %>
                                <div class="col-lg-3 m-0 mt-3">
                                    <%= link_to "/closet/show/#{c.id}" do %>
                                        <%= image_tag c.photograph.url, class: "closet_image" %>
                                    <% end %>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <%# ? outerタブエリア %>
                    <div id="outer" class="tab-pane">
                        <div class="row">
                            <% @closets_outer.each do |c| %>
                                <div class="col-lg-3 mt-3">
                                    <%= image_tag c.photograph.url, class: "closet_image" %>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <%# ? topsタブエリア %>
                    <div id="tops" class="tab-pane">
                        <div class="row">
                            <% @closets_tops.each do |c| %>
                                <div class="col-lg-3 mt-3">
                                    <%= image_tag c.photograph.url, class: "closet_image" %>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <%# ? pantsタブエリア %>
                    <div id="pants" class="tab-pane">
                        <div class="row">
                            <% @closets_pants.each do |c| %>
                                <div class="col-lg-3 mt-3">
                                    <%= image_tag c.photograph.url, class: "closet_image" %>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <%# ? shoesタブエリア %>
                    <div id="shoes" class="tab-pane">
                        <div class="row">
                            <% @closets_shoes.each do |c| %>
                                <div class="col-lg-3 mt-3">
                                    <%= image_tag c.photograph.url, class: "closet_image" %>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <%# ? otherタブエリア %>
                    <div id="other" class="tab-pane">
                        <div class="row">
                            <% @closets_other.each do |c| %>
                                <div class="col-lg-3 mt-3">
                                    <%= image_tag c.photograph.url, class: "closet_image" %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>