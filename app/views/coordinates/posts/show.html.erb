<div id="closet_show">
    <%# ! header %>
    <%= render "coordinates/layouts/header" %>
    <div class="d-flex">
        <%# ! sidebar %>
        <div class="col-lg-3">
            <%= render "coordinates/layouts/sidebar" %>
        </div>

        <%# ! contents %>
        <div class="list_content col-lg-9">
            <div class="m-3 bg-light">
                <div class="row">
                    <div class="col-lg-6">
                        <%= image_tag @closet.photograph.url, class: "closet_image" %>
                    </div>
                    <div class="col-lg-6 d-flex align-items-center">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>大カテゴリー</td>
                                <td><%= @closet.big_Category %></td>
                            </tr>
                            <tr>
                                <td>小カテゴリー</td>
                                <td><%= @closet.small_Category %></td>
                            </tr>
                            <tr>
                                <td>金額</td>
                                <td><%= @closet.price %></td>
                            </tr>
                            <tr>
                                <td>カラー</td>
                                <td><%= @closet.color %></td>
                            </tr>
                            <tr>
                                <td>サイズ</td>
                                <td><%= @closet.size %></td>
                            </tr>
                            <tr>
                                <td>ブランド</td>
                                <td><%= @closet.brand %></td>
                            </tr>
                            <tr>
                                <td><%= link_to "削除" , "/closet/delete/#{@closet.id}" , method: :delete %><td>
                            </tr>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>