<div id="sns_searchs">
    <%# ! header %>


    <div class="pc-header">
        <%= render "sns/layouts/pc_header" %>
    </div>

    <div class="row g-0">
        <%# ! sidebar %>
        <div class="col-lg-2 pc-sidebar">
            <%= render "sns/layouts/pc_sidebar" %>
        </div>



        <%# ! contents %>
        <div class="list_content col-lg-10 col-12">


            <div class="bg-white h-100">
            <%# 検索結果表示タブ %>
            <h4 class="pt-3">「<%= params[:search] %>」の検索結果</h4>
                    <div class="tab-content mt-3">
                        <%# ? allタブエリア %>
                        <div id="all" class="tab-pane active">
                            <div class="row g-1">
                                <% @search_result.each do |s| %>
                                    <div class="col-lg-3 col-md-4 col-4 mt-1">
                                        <%= link_to "/sns/show/#{s.id}" do %>
                                            <%= image_tag s.photograph.url, class: "sns_search_image" %>
                                        <% end %>
                                    </div>
                                <% end %>

                                <div class="mt-3">
                                    <%= paginate @search_result %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>