<% if @social.errors.any? %>
                    <div class="alert alert-danger" role="alert">
                        <% @social.errors.each do |error| %>
                        <strong>エラー！</strong> - <%= error.full_message %><br>
                        <% end %>
                    </div>
                <% end %>


<%= form_with(model: @social, url: "/sns/create", local: true, :html => {class:"needs-validation", :novalidate => true}) do |f| %>

                  <div class="mb-3">
                    <%= f.text_field :tag, class: "form-control", placeholder: "タグ" %>
                  </div>
                  <div class="mb-3">
                    <%= f.text_field :message, class: "form-control", placeholder: "投稿文" %>
                  </div>
                  <div class="mb-3">
                    <%= f.file_field :photograph, class: "form-control", placeholder: "写真" %>
                  </div>
                 
                  <% @closets.each do |image| %>
                    <div style="display: flex; margin:5px 5px 5px 0;">
                      <%= f.radio_button :item1, image.id %>
                      <label for="user_image_ids_<%= image.id %>" >
                        <%= image_tag image.photograph.url, size: '300x200' %>
                      </label>
                    </div>
                  <% end %>
