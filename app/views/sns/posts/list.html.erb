<div id="sns_posts">
    <%# ! サイドバーエリアとコンテンツエリア %>
    <div class="d-flex">
        <%# * サイドバーエリア %>
        <div class="side-content">
            <%= render "layouts/pc_sidebar" %>
        </div>

        <%# * コンテンツエリア %>
        <div class="main-content">
            <div class="list-content mx-auto">
                <% if user_signed_in? %>
                    <form id="myForm" class="d-flex justify-content-end" action="/" method="get">
                        <div class="form-check">
                            <%# ? フォロー中のみに切り替える %>
                            <input type="checkbox" class="form-check-input" value="true" id="formSwitchCheckDefault" name="followed_only" <%= params[:followed_only] == 'true' ? 'checked' : '' %>>
                            <label for="formSwitchCheckDefault" class="form-check-label fw-bold mb-2">フォロー中</label>
                        </div>
                    </form>
                <% end %>

                <ul class="tab-menu nav nav-underline nav-fill">
                    <li class="nav-item flex-fill">
                        <a href="?tab=all" class="nav-link fw-bold <%= params[:tab].nil? || params[:tab] == 'all' ? 'active' : '' %>">ALL</a>
                    </li>

                    <li class="nav-item flex-fill">
                        <a href="?page=1&tab=men" class="nav-link fw-bold <%= params[:tab] == 'men' ? 'active' : '' %>">MEN</a>
                    </li>
                    
                    <li class="nav-item flex-fill">
                        <a href="?page=1&tab=women" class="nav-link fw-bold <%= params[:tab] == 'women' ? 'active' : '' %>">WOMEN</a>
                    </li>
                </ul>

                <div class="tab-content mt-2">
                    <%# ? 全ての投稿を表示する %>
                    <div id="all" class="tab-pane active">
                        <div class="row g-1">
                            <% @sns_all.each do |sns| %>
                                <div class="col-lg-3 col-md-3 col-4 mt-1">

                                    <%= link_to "/sns/show/#{sns.id}" do %>
                                        <%= image_tag sns.photograph.url, class: "sns-image" %>
                                    <% end %>

                                    <div class="user-area py-2">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div class="d-flex align-items-center">
                                                <% if sns.user.avatar.present? %>
                                                    <%= link_to "/profile/show/#{sns.user_id}" do %>
                                                        <%= image_tag sns.user.avatar.url %>
                                                    <% end %>
                                                <% else %>
                                                    <%= link_to "/profile/show/#{sns.user_id}" do %>
                                                        <%= image_tag "/assets/user/avatar.png" %>
                                                    <% end %>
                                                <% end %>

                                                <div class="ms-2">
                                                    <div class="fw-bold user-name m-0">
                                                        <%= sns.user.user_name %>
                                                    </div>

                                                    <div class="user-height m-0">
                                                        <% if sns.user.height %>
                                                            <%= sns.user.height %>cm
                                                        <% else %>
                                                            身長未設定
                                                        <% end %>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mx-2">
                                                <div class="like m-0 d-flex align-items-center">
                                                    <%# ?  いいねできるかどうか判定 %>
                                                    <% if user_signed_in? %>
                                                        <% if SocialLike.where(social_id: sns.id, user_id: current_user.id).exists? %>
                                                            <%= link_to "/sns/delete_like/#{sns.id}", method: :delete do %>
                                                                <img src="/assets/icons/icn_heart.png" alt="">
                                                            <% end %>
                                                        <% else %>
                                                            <%= link_to "/sns/create_like/#{sns.id}", method: :post do %>
                                                                <img src="/assets/icons/icn_not_heart.png" alt="">
                                                            <% end %>
                                                        <% end %>
                                                    <% else %>
                                                        <%= link_to "/sns/create_like/#{sns.id}", method: :post do %>
                                                            <img src="/assets/icons/icn_not_heart.png" alt="">
                                                        <% end %>
                                                    <% end %>

                                                    <span class="number-of-likes align-self-center">
                                                        <%= SocialLike.where(social_id: sns.id).count %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>

                        <div class="page d-flex justify-content-center">
                            <%= paginate @sns_all, param_name: :page_all, params: { tab: "all" } %>
                        </div>
                    </div>

