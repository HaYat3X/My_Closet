<div id="posts">
    <%# ! header %>
    <div class="mobile-header">
        <%= render "sns/layouts/mobile_header" %>
    </div>

    <div class="pc-header">
        <%= render "sns/layouts/pc_header" %>
    </div>

    <div class="row g-0">
        <%# ! sidebar %>
        <div class="col-lg-3 pc-sidebar">
            <%= render "sns/layouts/pc_sidebar" %>
        </div>

        <div class="col-12 mobile-sidebar">
            <%= render "sns/layouts/mobile_sidebar" %>
        </div>

        <%# ! contents %>
        <div class="list_content col-lg-9 col-12 bg-white">


            <div class="">
            <%# * タブメニューエリア %>
                <ul class="nav nav-pills" role="tablist">
                    <li class="nav-item flex-fill">
                        <a href="#all" class="fw-bold nav-link active text-center" data-bs-toggle="tab">すべての投稿</a>
                    </li>
                    <li class="nav-item flex-fill">
                        <a href="#follow" class="fw-bold nav-link text-center" data-bs-toggle="tab">フォロー中</a>
                    </li>
                </ul>

                <div class="tab-content mt-3">
                    <%# ? allタブエリア %>
                    <div id="all" class="tab-pane active">
                        <div class="row g-1">
                            <% @snss.each do |s| %>
                                <div class="col-lg-3 col-md-4 col-4 mt-1">
                                    <%= link_to "/sns/show/#{s.id}" do %>
                                        <%= image_tag s.photograph.url, class: "sns_image" %>
                                    <% end %>
                                </div>
                            <% end %>

                            <%= paginate @snss %>
                        </div>
                    </div>

                    <div id="follow" class="tab-pane">
                        <div class="row">
                        <% @follow_list.each do |f| %>
                            <% @snss.each do |s| %>
                            <% if s.user_id == f.follower_id %>
                            <%# * フォロー中のユーザの投稿のみを表示 %>
                                <div class="col-lg-3 m-0 mt-3">
                                    <%= link_to "/sns/show/#{s.id}" do %>
                                        <%= image_tag s.photograph.url, class: "closet_image" %>
                                    <% end %>
                                    <div class="p-2 row">
                                        <div class="col-lg-3">
                                            <%= image_tag "/assets/img_1.png", class: "closet_image", style: "width: 35px; height: 35px; border-radius: 50px;" %>
                                        </div>
                                        <div class="col-lg-9 d-flex align-items-center">
                                            <%= s.user.user_name %><br>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                            <% end %>
                        <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>